@model ProductListViewModel

<div class="row">
    <div class="col-3">
        <h3>Categories</h3>
        <ul class="list-group">
            @{
                string name = "list-group-item";
                if (Model.CurrentCategoryId <= 0 || Model.CurrentCategoryId > Model.Categories.Count)
                {
                    name += " active";
                }
                <a href="/product/index" class="@name">All Product</a>
            }

            @foreach (var category in Model.Categories)
            {
                string className = "list-group-item";
                if (Model.CurrentCategoryId == category.CategoryId)
                {
                    className += " active";
                }
                <a href="/product/index/@category.CategoryId" class="@className">@category.CategoryName</a>
            }
        </ul>
        <button></button>
    </div>
    <div class="col-9">
        <h3>Products</h3>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Quantity PerUnit</th>
                <th>StockAmount</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <th>@product.ProductId</th>
                    <td>@product.ProductName</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.QuantityPerUnit</td>
                    <td>@product.UnitsInStock</td>
                    <td><a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.ProductId" class="btn btn-danger">Add</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
